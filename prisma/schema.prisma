generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Committee {
  id          Int     @id @default(autoincrement())
  role        String
  name        String
  description String?
}

model Announcement {
  id      Int    @id @default(autoincrement())
  title   String
  content String
  createdAt DateTime @default(now())
}

model FinancialReport {
  id        Int      @id @default(autoincrement())
  title     String
  type      String   // For example, "PDF" or "XLSX"
  fileName  String   // The actual file name (stored in your public folder or cloud storage)
  createdAt DateTime @default(now())
}

model messages {
  id        Int      @id @default(autoincrement()) // Primary key with auto-increment
  name      String   // User's name
  email     String   // User's email
  message   String   // User's feedback or message
  createdAt DateTime @default(now()) // Timestamp for when the message was created
}